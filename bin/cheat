#!/usr/bin/env bash

# Create an executable.
#
# Usage:
#   $ cheat sayhey 'echo "hi there!"'
#   $ sayhey #=> prints "hi there!"

file="./bin/$1"
command="$2"
touch $file
chmod a+x $file

cat <<EOF > $file
#!/usr/bin/env bash

# [add some documentation]

set -euo pipefail # exit on any error, don't allow undefined variables, pipes don't swallow errors

$command
EOF

$EDITOR .
$EDITOR $file
